<% provide :title, ("sign up") %>
<div class="container">
    <h2>Sign Up </h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Salada_kakkoiii@gmail.com", require: true  %>
    </div>

    <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%=  f.password_field :password, autocomplete: "new-password", placeholder: "123456", class: "form-control", require: true %>
    </div>

    <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "123456", class: "form-control" , require: true %>
    </div>

    <div class="form-group">
       <%= f.label :name %><br />
        <%= f.text_field :name, autocomplete: "name", placeholder: "Masashi Salada", class: "form-control" , require: true %>
    </div>

    <div class="form-group">
       <%= f.label :job %><br />
        <%= f.text_field :job, autocomplete: "job", placeholder: "yashasi PM", class: "form-control" , require: true %>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <% end %>
</div>