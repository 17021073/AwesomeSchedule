<% provide :title, ("サインアップ") %>

<div class="signup-form">
  <div class="container">
    <div class="row" style="padding-top: 5%;padding-bottom: 3%">
      <h2 style="margin: 0px auto; color: #00828C;font-weight: bold"> サインアップ </h2>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group">
      <i class="fa fa-envelope-o" aria-hidden="true"></i>
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Salada_kakkoiii@gmail.com", require: true  %>
    </div>

    <div class="form-group">
      <i class="fa fa-unlock-alt" aria-hidden="true"></i>
      <%= f.label "パスワード" %><br />
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%=  f.password_field :password, autocomplete: "new-password", placeholder: "123456", class: "form-control", require: true %>
    </div>

    <div class="form-group">
      <i class="fa fa-unlock-alt" aria-hidden="true"></i>
      <%= f.label "パスワードの確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "123456", class: "form-control" , require: true %>
    </div>

    <div class="form-group">
      <i class="fa fa-user" aria-hidden="true"></i>
      <%= f.label "名前" %><br />
      <%= f.text_field :name, autocomplete: "name", placeholder: "Masashi Salada", class: "form-control" , require: true %>
    </div>

    <div class="form-group">
      <i class="fa fa-briefcase" aria-hidden="true"></i>
      <%= f.label "仕事" %><br />
      <%= f.text_field :job, autocomplete: "job", placeholder: "yashasi PM", class: "form-control" , require: true %>
    </div>
    <div class="row">
      <button type="submit" class="btn btn-success" style="margin:0px auto">サインアップ</button>
    </div>
    <% end %>
  </div>
</div>

