<div class="login-form">
  <div class="row" style="padding-top: 5%;padding-bottom: 3%">
    <h2 style="margin: 0px auto; color: #00828C;font-weight: bold"> ログイン </h2>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <i class="fa fa-envelope-o" aria-hidden="true"></i>
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" ,class: "form-control"%>
    </div>

    <div class="form-group">
      <i class="fa fa-unlock-alt" aria-hidden="true"></i>
      <%= f.label "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password" ,class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label "次回から自動的にログイン" %>
      </div>
    <% end %>
    <div class="actions">
      <div class="row">
        <button type="submit" class="btn btn-success" style="margin: 0px auto">ログイン</button>
      </div>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

