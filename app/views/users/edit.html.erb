<% provide :title, ("sign up") %>

<div class="container">
  <h2>登録</h2>
  <form action="" >
    <div class="form-group">
      <label for="uname">メールアドレス:</label>
      <input type="text" class="form-control" id="uname" placeholder="Enter username" name="uname" required>
    </div>
    <div class="form-group">
      <label for="pwd">パスワード:</label>
      <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pswd" required>
    </div>
    <div class="form-group">
      <label for="uname">名前: </label>
      <input type="text" class="form-control" id="name" placeholder="Enter your name" name="uname" required>
    </div>
    <div class="form-group">
      <label for="uname">キャリア:</label>
      <input type="text" class="form-control" id="job" placeholder="Enter your job" name="uname" required>
    </div>
    <button type="submit" class="btn btn-primary">確認</button>
  </form>
</div>
