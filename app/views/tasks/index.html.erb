<% provide :title, ("AWSchedule") %>

<div class="container">
  <div class="uk-text-center" uk-grid>
    <div class="uk-width-1-1@s uk-width-1-3@m">
      <button type="button" class="btn btn-primary btn-lg btn-block add-task">日付を選択
      </button>
      <%= form_with(url: "/task/date", method:"post") do %>
        <input name="date" type="date" autofocus="" value=<%=Time.now %> onchange="this.form.submit()" style="margin-top:5%; float:left">
      <% end %>
    </div>
    <div class="uk-width-1-1@s uk-width-2-3@m">
      <%= link_to new_task_path,"style"=> "text-decoration:none" do %>
        <button type="button" class="btn btn-success btn-block" style="font-size: medium; padding: 10px 10px 10px 10px">新しいタスクを作成
        </button>
      <% end %>
      <div class="uk-text-left" style="padding-top: 3%">
        <table class="uk-table">
          <thead>
            <tr>
              <td class="uk-text-bold uk-text-center uk-text-middle">#</td>
              <td class="uk-text-bold uk-text-center uk-text-middle">名前</td>
              <td></td>
              <td class="uk-text-bold uk-text-center"><i class="fa fa-calendar" aria-hidden="true" style="color: blue;font-size:30px;padding-right: 10px"></i>スタトタイム</td>
              <td class="uk-text-bold uk-text-center"><i class="fa fa-calendar" aria-hidden="true" style="color: blue;font-size:30px;padding-right: 10px"></i>デッドライン</td>
              <td></td>
              <td></td>
            </tr>
          </thead>
          <tbody>
            <% @tasks.each do |task| %>
              <% if task.status == "0" %>
                <tr>
                  <td class="uk-text-bold uk-text-center uk-text-middle">
                    <input type="checkbox">
              <% else %>
                <tr style="background: #ebedee">
                  <td class="uk-text-bold uk-text-center uk-text-middle">
                    <input type="checkbox" checked>
              <% end %>
                </td>
                <td class="uk-text-middle"><label class="task"><%= link_to task.tasks, task %></label></td>
                <td class="uk-text-bold uk-text-center uk-text-middle">
                  <% if task.type_task == 1 %>
                    <i class="fa fa-home" aria-hidden="true" style="font-size: 30px"></i>
                  <% elsif task.type_task == 2%>
                    <i class="fa fa-user" aria-hidden="true" style="font-size: 30px"> </i>
                  <% else %>
                    <i class="fa fa-briefcase" aria-hidden="true" style="font-size: 30px"></i>
                  <% end %>
                </td>
                <td class="uk-text-bold uk-text-center uk-text-middle"><%= task.start_time.to_date() %> <%= task.start_time.strftime("%H:%M") %> </td>
                <td class="uk-text-bold uk-text-center uk-text-middle"><%= task.deadline.to_date() %> <%= task.deadline.strftime("%H:%M") %> </td>
                <td class="uk-text-middle">
                  <%= link_to edit_task_path task do %>
                    <button type="button" class="btn btn-warning"><i class="fa fa-wrench" aria-hidden="true" style="font-size: 20px"></i></button>
                  <% end %>
                </td>
                <td class="uk-text-middle">
                  <%= link_to task, method: :delete, data: { confirm: "you_sure" } do %>
                    <button type="button" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="right" title = <%= "delete" %>><i class="fa fa-trash-o" aria-hidden="true" style="font-size: 25px"></i></button>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="uk-text-left">
      <p style="padding-left: 5%;font-size: xx-large;font-weight: bold;padding-top: 3%">タスクの種類</p>
  </div>
  <div class="uk-text-center" uk-grid>
      <div class="uk-width-1-1@s uk-width-1-3@m" >
        <div class="task-type-item">
          <a href="#"><i class="fa fa-home" aria-hidden="true" style="font-size: 30px"></i> 家族</a>
        </div>
      </div>
      <div class="uk-width-1-1@s uk-width-1-3@m">
          <div class="task-type-item">
              <a href="#"> <i class="fa fa-user" aria-hidden="true" style="font-size: 30px"> </i> 個人</a>
          </div>
      </div>
      <div class="uk-width-1-1@s uk-width-1-3@m">
          <div class="task-type-item" >
              <a href="#"><i class="fa fa-briefcase" aria-hidden="true" style="font-size: 30px"></i> 会社</a>
          </div>
      </div>
  </div>
  <div class="uk-text-left uk-text-bold">
    <p style="padding-left: 5%;font-size: xx-large;padding-top: 3%">レベル</p>
  </div>
  <div class="uk-text-left">
      <a href="#" style="padding-left: 8%;font-size: large">とても大切</a>
  </div>
  <div class="uk-text-left">
      <a href="#"  style="padding-left: 8%;font-size: large">大切</a>
  </div>
  <div class="uk-text-left">
      <a href="#"  style="padding-left: 8%;font-size: large">あまり大切じゃない</a>
  </div>
    </div>
